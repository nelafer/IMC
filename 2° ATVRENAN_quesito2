nota1 = -1
while nota1 < 0 or nota1 > 10:
    nota1 = float(input("Digite a primeira nota (0 a 10): "))
    
nota2 = -1
while nota2 < 0 or nota2 > 10:
    nota2 = float(input("Digite a segunda nota (0 a 10): "))

#Cálculo da média
media = (nota1 + nota2) / 2
print(f"Média: {media:.1f}")

#Resultado
if media >= 6:
    print("Aprovado")
else:
    print("Reprovado")
